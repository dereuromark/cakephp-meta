{
	"name": "dereuromark/cakephp-meta",
	"description": "Meta plugin for CakePHP",
	"type": "cakephp-plugin",
	"keywords": ["cakephp", "plugin", "view", "SEO", "meta", "canonical"],
	"homepage": "https://github.com/dereuromark/cakephp-meta",
	"license": "MIT",
	"require": {
		"php": ">=5.6",
		"cakephp/cakephp": "^3.7"
	},
	"require-dev": {
		"fig-r/psr2r-sniffer": "^0.6"
	},
	"autoload": {
		"psr-4": {
			"Meta\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Meta\\Test\\": "tests/",
			"Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
		}
	},
	"scripts": {
		"test": "php phpunit.phar",
		"test-coverage" : "php phpunit.phar --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage --coverage-clover tmp/coverage/coverage.xml",
		"test-setup": "[ ! -f phpunit.phar ] && wget https://phar.phpunit.de/phpunit-6.5.13.phar && mv phpunit-6.5.13.phar phpunit.phar || true",
		"phpstan": "phpstan analyse -c tests/phpstan.neon -l 7 src/",
		"phpstan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^0.12 && mv composer.backup composer.json",
		"cs-check": "phpcs -p -s --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --extensions=php src/ tests/ config/",
		"cs-fix": "phpcbf -p --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --extensions=php src/ tests/ config/"
	}
}
