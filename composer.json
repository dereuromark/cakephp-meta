{
	"name": "dereuromark/cakephp-meta",
	"description": "Meta plugin for CakePHP",
	"type": "cakephp-plugin",
	"keywords": [
		"cakephp",
		"plugin",
		"view",
		"SEO",
		"meta",
		"canonical"
	],
	"homepage": "https://github.com/dereuromark/cakephp-meta",
	"license": "MIT",
	"require": {
		"php": ">=7.3",
		"cakephp/cakephp": "^4.2.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"fig-r/psr2r-sniffer": "dev-master"
	},
	"autoload": {
		"psr-4": {
			"Meta\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Meta\\Test\\": "tests/",
			"Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
		}
	},
	"scripts": {
		"test": "phpunit",
		"test-coverage": "phpunit --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage --coverage-clover tmp/coverage/coverage.xml",
		"stan": "phpstan analyse",
		"stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^1.0.0 && mv composer.backup composer.json",
		"cs-check": "phpcs -p -s --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --extensions=php src/ tests/",
		"cs-fix": "phpcbf -p --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --extensions=php src/ tests/"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
